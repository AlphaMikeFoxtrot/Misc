<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anonymous.caffeinetracker.aBru">

    <ImageView
        android:id="@+id/bruLogo"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:src="@drawable/brulogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_below="@id/bruLogo"
        android:id="@+id/packets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/packets"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_margin="15dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/packets"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/minus"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/minus"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"
            android:id="@+id/quantity"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="0"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/plus" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear1">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="@string/caffeine"/>

        <TextView
            android:id="@+id/cAmt"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:layout_marginRight="12dp"
            android:text="0 mg"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/backToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

